<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundLight">

    <include layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtPatientHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Name • Age • Gender"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/btnPersonalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primaryColor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/btnMedicalHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical History"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primaryColor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/btnCurrentTreatment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Treatment Details"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primaryColor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/btnPrescribeNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prescribe New Treatment"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primaryColor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/btnSubscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscription Details"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/primaryColor" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
